<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity_signup">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- 1st linear layout!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:id="@+id/text_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/jost_medium"
                android:text="SIGN UP"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="35dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/text_firstname"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jost_medium"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_firstname"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:background="@drawable/blue_border"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingStart="20dp"/>


        <TextView
            android:id="@+id/text_surname"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jost_medium"
            android:textColor="@color/black"
            android:text="Surname"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_surname"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:background="@drawable/blue_border"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingStart="20dp"/>


        <TextView
            android:id="@+id/text_signUpEmail"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jost_medium"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_signUpEmail"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:background="@drawable/blue_border"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingStart="20dp"/>

        <TextView
            android:id="@+id/text_signUpPassword"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jost_medium"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_signUpPassword"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:background="@drawable/blue_border"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingStart="20dp"/>

        <TextView
            android:id="@+id/text_confirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jost_medium"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_confirmPassword"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:background="@drawable/blue_border"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingStart="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signUp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Save"
            android:fontFamily="@font/jost_medium"
            android:background="@drawable/button_cornered"
            android:textColor="@color/blue_light"
            />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>